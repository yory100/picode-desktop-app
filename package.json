{
  "name": "picode",
  "version": "0.0.1",
  "author": "Haikel Fazzani",
  "license": "MIT",
  "description": "Modern and ligtweight code editor",
  "main": "main.js",
  "icon": "dist/logo/logo.ico",
  "scripts": {
    "watch": "rollup -c -w src/",
    "build": "rollup -c",
    "start": "electron .",
    "packager": "electron-packager . --ignore=^/src",
    "setup": "electron-installer-windows --src picode-win32-x64 --dest build/x64/ --config config.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "asar": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "dist/icons/logo.ico",
      "uninstallerIcon": "dist/icons/logo.ico",
      "license": "License"
    },
    "directories": {
      "buildResources": "dist",
      "output": "build"
    },
    "buildVersion": "1.0.0",
    "files": [
      "main.js",
      "main_process/*",
      "dist/*",
      "dist/*/**"
    ]
  },
  "dependencies": {
    "ace-builds": "^1.4.8",
    "electron-context-menu": "^0.16.0",
    "react-ace": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haikelfazzani/picode.git"
  },
  "keywords": [
    "code",
    "editor",
    "javascript",
    "typescript",
    "python"
  ],
  "bugs": {
    "url": "https://github.com/haikelfazzani/picode/issues"
  },
  "homepage": "https://github.com/haikelfazzani/picode#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-loader": "^8.0.6",
    "electron": "^8.0.0",
    "electron-builder": "^22.3.2",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^14.2.0",
    "electron-reloader": "^0.3.0",
    "electron-winstaller": "^4.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.16.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.2"
  }
}