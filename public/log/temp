function fuzzyMath(text,word) {
  word = word.replace(/\ /g,'').toLowerCase();
  let pos = 0;
  let tokens = text.split('');

  tokens.forEach((chr,i) => {
    if(chr.toLowerCase() === word[pos]) {
      tokens[i] = '-';
      pos++;      
    }
    if(pos > text.length) {
      return false;
    }
  });

  return tokens.join('');
}

const words = ['hello world', 'hello guys', 'drop down', 'mine mano'];

words.forEach(w=>{
  console.log(fuzzyMath(w, 'mo'));
})
